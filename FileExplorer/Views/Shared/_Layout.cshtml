<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Explorador de Archivos UABC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="@Url.Content("~/images/LOGO_UABC.png")" alt="UABC Logo" height="30" class="d-inline-block align-text-top me-2" />
                    Explorador de Archivos UABC
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                    </ul>
                </div>
                <button id="toggle-darkmode" class="btn btn-outline-secondary ms-2" type="button" title="Cambiar modo oscuro/claro">
                    <i class="bi bi-moon"></i>
                </button>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Explorador de Archivos UABC
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

    <script>
    $(function () {
        // Cargar preferencia guardada
        if (localStorage.getItem('dark-mode') === 'true') {
            $('body').addClass('dark-mode');
            $('#toggle-darkmode i').removeClass('bi-moon').addClass('bi-sun');
        }

        $('#toggle-darkmode').on('click', function () {
            $('body').toggleClass('dark-mode');
            const isDark = $('body').hasClass('dark-mode');
            $('#toggle-darkmode i').toggleClass('bi-moon', !isDark).toggleClass('bi-sun', isDark);
            localStorage.setItem('dark-mode', isDark);
        });
    });
</script>

<style>
    body.dark-mode {
        background-color: #181a1b !important;
        color: #e9ecef !important;
    }

    body.dark-mode .bg-white,
    body.dark-mode .bg-light,
    body.dark-mode .navbar,
    body.dark-mode .navbar-light,
    body.dark-mode .card,
    body.dark-mode .modal-content,
    body.dark-mode .border,
    body.dark-mode .border-top,
    body.dark-mode .border-bottom {
        background-color: #23272b !important;
        color: #e9ecef !important;
        border-color: #444 !important;
    }

    body.dark-mode .breadcrumb {
        background-color: #23272b !important;
        color: #e9ecef !important;
    }

    body.dark-mode .btn,
    body.dark-mode .btn-outline-secondary {
        background-color: #23272b !important;
        color: #e9ecef !important;
        border-color: #444 !important;
    }

    body.dark-mode .form-control,
    body.dark-mode .form-select,
    body.dark-mode textarea {
        background-color: #23272b !important;
        color: #e9ecef !important;
        border-color: #444 !important;
    }

    body.dark-mode .dropdown-menu {
        background-color: #23272b !important;
        color: #e9ecef !important;
    }

    body.dark-mode .navbar,
    body.dark-mode .footer {
        background-color: #1f1f1f;
        color: #e0e0e0;
    }

    body.dark-mode .navbar a,
    body.dark-mode .footer a {
        color: #bb86fc;
    }

    body.dark-mode #sidebar-panel,
    body.dark-mode #sidebar-panel * {
        color: #e9ecef !important;
    }

    body.dark-mode #sidebar-panel .bi-folder-fill.text-warning {
        color: #ffc107 !important; /* color amarillo Bootstrap */
    }
</style>